@page "/alloffers"
@using System.Collections.ObjectModel;
@using Gagger.Helpers;
@inject IJSRuntime JsRuntime
@inject NavigationManager NavManager


<PageTitle>Main</PageTitle>

<body class="yolo">
    <div style="overflow:scroll; height: 100%; overflow-x: hidden;" class="mainDiv">
        <table style="padding: 20px;" class="maintable">
            <tr>
                <td class="equalSize">
                </td>
                <td>
                    <div align="center" class="centerDiv" style="">
                        <!-- Adjust the height value as needed -->
                        <table width="80%" style="height: 100px;" >
                            <tr>
                                <td align="center" style="padding-top: 20px;">
                                    <strong style="font-size: 25px;">Alle aktiven Angebote</strong>
                                </td>
                            </tr>
                            <tr>
                                <td align="center">
                                    <p style="font-size: 16px;">Aktuelle Seite: @pagePos</p>
                                </td>
                            </tr>
                            <tr>
                                <td align="left" style="padding-top: 20px; overflow: hidden;">
                                    @{
                                        foreach (var elem in fullOfferType)
                                        {
                                            <div class="containeritem">
                                                <table  style="">
                                                    <tr>
                                                        <td style="width: 33%; vertical-align:baseline">
                                                            <div class="imageContainer">
                                                                <img class="image" src="@Helpers.Converters.ReturnBase64ImageSourceFromBase64String(elem.thumbnail)" />
                                                            </div>
                                                        </td>
                                                        <td style="vertical-align: top; width: 67%; padding-left: 10px;">
                                                            <table>
                                                                <tr>
                                                                    <td>
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td>
                                                                        <strong>@elem.title</strong>
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td>
                                                                        <p>@elem.extraInformation</p>
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                        </td>
                                                        <td style="vertical-align: top; width: 10%">
                                                            <button class="delete" @onclick="() => DelteAd(elem.id)">X</button>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </div>
                                            <table>
                                                <tr>
                                                     <td>
                                                        <p style="font-size: 12px;">Offer-Id: @elem.id</p>

                                                     </td>
                                                    <td>
                                                        <p style="margin-left: 20px;font-size: 12px;">Order: @elem.order</p>

                                                    </td>
                                                </tr>
                                            </table>
                                        }
                                    }
                                </td>
                            </tr>
                        </table>               
                    </div>
                </td>
                <td class="equalSize">
                </td>
            </tr>
        </table>
        <table style="width: 100%;">
            <tr>
                <td style="width: 50%; text-align:right;">
                    <button class="delete" @onclick="() => Move(false)">zurück</button>
                </td>
                <td style="width: 50%;">
                    <button hidden="@nextButtonInvisible" class="delete" @onclick="() => Move(true)">weiter</button>
                </td>
            </tr>
        </table>
    </div>
</body>


<style>

    .containeritem{
        margin-top: 10px; 
        vertical-align: top;
        border: 2px solid #000;
        border-radius: 10px; 
        width: 350px;
        max-height: 60px;
        padding-left: 10px;
        padding-right: 10px;
        overflow: hidden;
    }

    ul li a {
        text-decoration: none;
        color: #b61c1c; /* For Example */
    }

    .image {
        width: 100px;
        overflow: hidden;
    }

    .delete {
        margin-top: 10px; 
        margin-left: 10px; 
        border-radius: 10px;
    }
    
    .singleCat {
        margin-top: 10px; 
        color: white; 
        padding: 5px 10px 5px 10px;
        background-color: #7c7fe6;
        width: 250px; 
        border-radius: 15px;
    }

    .selects {
        margin-left: 10px;
        margin-top: 10px;
    }

    .yolo {
        height: 91vh;
        background-image: linear-gradient(to right, #ff512f, #f09819);
    }



    .mainDiv {
        display: grid;
        height: 55vh;
        place-items: center;
    }

    .centerDiv {
        margin-top: 0px;
        border-radius: 10px;
        width: 100%;
        background-color: white;
        box-shadow: 10px 10px #262626;
        height: 750px; /*size of center */
        overflow: hidden;
        padding: 20px;
    }


    .centerDiv:hover {
            overflow: auto;
        }

    .maintable {
        width: 100%;
        height: 100px; 
    }


    .spacer {
        height: 40px;
    }

    .equalSize {
        width: 25%;
    }
</style>


@code {

    List<Gagger.Data.Api.OfferType> fullOfferType = new List<Gagger.Data.Api.OfferType>();
    private int pagePos = 0; 
    bool nextButtonInvisible = false;

    protected override async void OnInitialized()
    {
        base.OnInitialized();
        await GetAllOffers();
        StateHasChanged();
    }

    private async void Move(bool forward)
    {
        if (forward)
        {
            pagePos++;
        }
        else
        {
            if(pagePos == 0) return; // cant go further back

            pagePos--;
        }

        await GetAllOffers();
        StateHasChanged();
    }

    private async void DelteAd(string id)
    {
        bool confirmed = await JsRuntime.InvokeAsync<bool>("confirm", "Sicher löschen? Das ist unumkehrbar!"); // Confirm

        if (confirmed)
        {
            // User clicked OK
            await Data.Api.OfferApi.DeleteOfferById(id);
            await GetAllOffers();
            StateHasChanged();
        }
        else
        {
            // User clicked Cancel
        }
    }



    protected async Task GetAllOffers()
    {
        fullOfferType = await Data.Api.OfferApi.GetAllOffers(pagePos * Constants.ELEMCOUNT, Helpers.Constants.ELEMCOUNT);

        if (fullOfferType.Count < 5) nextButtonInvisible = true;
        else nextButtonInvisible = false;
    }





}

